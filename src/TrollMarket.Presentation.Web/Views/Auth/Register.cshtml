@{
    Layout = "../shared/_AuthLayout.cshtml";
}
@model RegisterUserViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Register</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input asp-for="Role" type="hidden" />
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div>
                                <span style="color:red">@ViewBag.ErrorMessage</span>
                            </div>
                        }
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Username</label>
                            <input asp-for="Username" class="form-control" placeholder="Enter your username">
                            <span asp-validation-for="Username"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password"  type="password" class="form-control" placeholder="Enter your password">
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password">
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name"  class="form-control" placeholder="Enter your name">
                            <span asp-validation-for="Name"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Address</label>
                            <textarea asp-for="Address" class="form-control"  placeholder="Enter your address"></textarea>
                            <span asp-validation-for="Address"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">Already have an account?</p>
                    <a asp-action="login" class="btn btn-link">Login</a>
                    <p class="mb-0">Want to add another role?</p>
                    <a asp-action="AddRole" asp-route-role="Seller" class="btn btn-link">Add Seller Role</a>
                    <a asp-action="AddRole" asp-route-role="Buyer" class="btn btn-link">Add Buyer Role</a>
                </div>
            </div>
        </div>
    </div>
</div>